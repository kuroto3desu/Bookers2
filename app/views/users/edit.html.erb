<div class="mx-auto" style="margin-top: 15px; margin-bottom: 40px; width: 490px;">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <div class="error_explanation">
          <h5 class="error-count"><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h5>
          <ul class="error-message">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: current_user, url: user_path(current_user), method: :patch, local: true do |user| %>
      <div class="form-group">
        <label>Name</label><br>
        <%= user.text_field :name , class: "form-control" %>
      </div>
      
      <div class="form-group">
        <label>Image</label><br>
        <%= user.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> 
      </div>
      
      <div class="form-group">
        <label>Introduction</label><br>
        <%= user.text_area :introduction , class: "form-control" %>
      </div>
      
      <%= user.submit "Update User", Class: "btn btn-secondary btn-sm" %>
      <% end %>
</div>