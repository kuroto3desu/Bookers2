
<div class="mx-auto" style="margin-top: 15px; margin-bottom: 40px; width: 490px;">
      <h2>Editing Book</h2>
      <% if @book.errors.any? %>
        <div class="error_explanation">
          <h5 class="error-count"><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h5>
          <ul class="error-message">
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @book, url: book_path(@book.id), method: :patch, local: true do |book| %>
      <div class="form-group">
        <label>Title</label><br>
        <%= book.text_field :title , class: "form-control" %>
      </div>
      
      <div class="form-group">
        <label>Opinion</label><br>
        <%= book.text_area :body , class: "form-control" %>
      </div>
      
      <%= book.submit "Update Book", Class: "btn btn-success btn-sm" %>
      <% end %>
      
      <div class="mt-2">
      <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
      </div>
</div>